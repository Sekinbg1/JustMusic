<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background">
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:gravity="center"
              android:text="新建曲库"
              android:textSize="40dp"/>
    <Space android:layout_width="match_parent"
           android:layout_height="10dp"
    />
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:background="@drawable/page_background"
                  android:orientation="vertical">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="名称："/>
            <EditText android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:minWidth="500dp"
                      android:id="@+id/songs_bank_add_name"/>
        </LinearLayout>
        <Space android:layout_width="match_parent"
               android:layout_height="5dp"
        />
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="创建者："/>
            <EditText android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/songs_bank_add_creator"/>
        </LinearLayout>
        <Space android:layout_width="match_parent"
               android:layout_height="5dp"
        />
        <LinearLayout android:layout_width="match_parent"
                      android:gravity=""
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:text="在线："/>
            <Switch android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:id="@+id/songs_bank_add_online"/>
            <ImageView android:layout_width="35dp"
                       android:layout_height="35dp"
                       android:src="@drawable/help"
                       android:id="@+id/songs_bank_add_online_help"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:visibility="invisible"
                      android:id="@+id/songs_bank_add_public_text"
                      android:text="公开："/>
            <Switch android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:layout_height="wrap_content"
                    android:id="@+id/songs_bank_add_public"/>
            <ImageView android:layout_width="35dp"
                       android:layout_height="35dp"
                       android:src="@drawable/help"
                       android:visibility="invisible"
                       android:id="@+id/songs_bank_add_public_help"/>
            <Spinner android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="match_parent"
                     android:visibility="invisible"
                     android:id="@+id/songs_bank_add_account"/>
        </LinearLayout>
        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:maxLines="5"
                  android:id="@+id/songs_bank_add_info"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:gravity="right">
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消"
                    android:id="@+id/songs_bank_add_cancel"
                    android:background="@drawable/button_background"/>
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提交"
                    android:background="@drawable/button_background"
                    android:id="@+id/songs_bank_add_conform"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>